<main class="input-container">
    <header class="input-header">
        <h2>Welcome <span class="user-name"></span></h2>
    </header>

    <section class="inputs">
        <ul>
            {{#each Post}}
            <li>
                <p class="postMessage">{{body}}</p>
                <button id="delete-Btn" class="deleteBtn" data-postID="{{id}}">Delete</button>
            </li>
            <hr>
            {{/each}}
        </ul>
        <button class="submitBtn" id="start">Create Post</button>
    </section>
</main>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
