

{{!--the first page user will see, once signed in, redirects to actual home page which could be the profile page--}}


<main class="input-container"><div class="col-6 offset-3">
  <header class="input-header">
    
    <h2>Sign In</h2>
  </header>

  <section class="inputs">
    <form class="inputs-form">
      <div class="form-grid">
        <label for="signin-email" class="form-prompt">E-mail:</label>
        <input type="email" id="signin-email" placeholder="youremail@email.com" class="textfield">

        <label for="signin-password" class="form-prompt">Password:</label>
        <input type="password" id="signin-password" placeholder="password" class="textfield">
      </div>

      <input type="submit" value="Submit" id="submitBtn" class="submitBtn">
    </form>

    <a href="/signUp" class="signup-link">Click here to sign up!</a>
  </section></div>
</main>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/signin.js"></script>